<Window x:Class="CallAssistantUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Call Assistant"
        Height="720"
        Width="1200"
        Background="#FF0F172A"
        Loaded="MainWindow_OnLoaded">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0"
                Background="#19233C"
                Padding="12"
                CornerRadius="8">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left">
                    <Button Content="Start Call"
                            Width="120"
                            Padding="8,4"
                            Margin="0,0,8,0"
                            Command="{Binding StartCallCommand}" />
                    <Button Content="End Call"
                            Width="120"
                            Padding="8,4"
                            Command="{Binding EndCallCommand}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Ellipse Width="16"
                             Height="16">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#FF3FB950" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status.HasError}" Value="True">
                                        <Setter Property="Fill" Value="#FFE5534B" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status.Processing}" Value="False">
                                        <Setter Property="Fill" Value="#FFE0E0E0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ConnectionStatusMessage}"
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="8,0,0,0"
                               FontWeight="SemiBold" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Middle content -->
        <Grid Grid.Row="1" Margin="0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.55*" />
            </Grid.ColumnDefinitions>

            <!-- Transcript Panel -->
            <Border Grid.Column="0"
                    Margin="0,0,8,0"
                    Background="#FF111A2E"
                    CornerRadius="10"
                    Padding="16">
                <DockPanel>
                    <TextBlock Text="Live Transcript"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#FFB0C4FF"
                               DockPanel.Dock="Top"
                               Margin="0,0,0,12" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="TranscriptTextBox"
                                 Text="{Binding Transcript.FullText, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 Background="#FF0D1424"
                                 Foreground="#FFE5E5E5"
                                 BorderThickness="0"
                                 FontSize="16"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Hidden"
                                 TextChanged="TranscriptTextBox_OnTextChanged" />
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Questions Panel -->
            <Border Grid.Column="1"
                    Margin="8,0,0,0"
                    Background="#FF111A2E"
                    CornerRadius="10"
                    Padding="16">
                <DockPanel>
                    <TextBlock Text="Detected Questions"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#FFB0C4FF"
                               DockPanel.Dock="Top"
                               Margin="0,0,0,12" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Questions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12"
                                            Padding="12"
                                            Background="#FF1B2540"
                                            CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding QuestionText}"
                                                       Foreground="White"
                                                       FontSize="16"
                                                       FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding TimestampDisplay}"
                                                       Foreground="#FF9AA8D4"
                                                       FontSize="12"
                                                       Margin="0,4,0,8" />
                                            <ItemsControl ItemsSource="{Binding Suggestions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Text}"
                                                                   Foreground="#FFE5E5E5"
                                                                   Margin="0,2,0,0"
                                                                   TextWrapping="Wrap" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Bottom status bar -->
        <Border Grid.Row="2"
                Background="#19233C"
                Padding="12"
                CornerRadius="8">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Latency:"
                               Foreground="#FFB0C4FF"
                               FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Margin="6,0,0,0">
                        <TextBlock Text="{Binding Status.AsrLatencyMs}"
                                   Foreground="White" />
                        <TextBlock Text=" ms"
                                   Foreground="White" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Queue:"
                               Foreground="#FFB0C4FF"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding Status.QueueDepth}"
                               Foreground="White"
                               Margin="6,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Errors:"
                               Foreground="#FFB0C4FF"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding Status.Errors}"
                               Foreground="White"
                               Margin="6,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Processing:"
                               Foreground="#FFB0C4FF"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding Status.ProcessingText}"
                               Foreground="White"
                               Margin="6,0,0,0" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
